{
    "defaultSeverity": "warn",
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {
        "semicolon": [
            true,
            "never"
        ],
        "object-literal-sort-keys": false,
        "only-arrow-functions": false,
        "prefer-for-of": false,
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "member-access": [
            true,
            "no-public"
        ]
    },
    "rulesDirectory": [],
    "linterOptions": {
        "exclude": [
            "**/*.js",
            "**/*.json"
        ]
    }
}
